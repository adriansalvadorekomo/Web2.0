<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Author Details - {{ author.name }}</title>
    <link rel="stylesheet" href="{{ asset('node_modules/bootstrap/dist/css/bootstrap.min.css') }}">
    <style>
        body {
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
            background-color: #f4f6f9;
            color: #333;
        }

        .card {
            border: none;
            border-radius: 15px;
            overflow: hidden;
            margin-top: 40px;
            background-color: #fff;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        }

        .card-header {
            background: linear-gradient(135deg, #007bff, #6c757d);
            border-bottom: none;
            padding: 1.5rem;
        }

        .card-title {
            font-size: 2rem;
            font-weight: 600;
        }

        .card-body h3 {
            font-size: 1.5rem;
            font-weight: 500;
        }

        .btn {
            border-radius: 30px;
            padding: 10px 20px;
            font-size: 1rem;
            transition: background-color 0.3s ease;
            text-decoration: none; /* Eliminar el subrayado de los enlaces */
        }

        .btn-info {
            background-color: #17a2b8;
            border: none;
        }

        .btn-warning {
            background-color: #ffc107;
            border: none;
        }

        .btn:hover {
            opacity: 0.9;
        }

        .img-fluid {
            width: 180px;
            height: 180px;
            object-fit: cover;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .list-group-item {
            border: none;
            padding: 0.75rem 1.25rem;
            background-color: #f8f9fa;
            transition: background-color 0.2s ease;
        }

        .list-group-item:hover {
            background-color: #e2e6ea;
        }

        .badge {
            background-color: #007bff;
            padding: 8px 12px;
            font-size: 0.9rem;
            border-radius: 20px;
        }

        .col-md-4 {
            background-color: #f8f9fa;
        }

        .d-flex {
            justify-content: space-between;
            margin-top: 20px;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="card">
            <div class="card-header text-white text-center">
                <h2 class="card-title">{{ author.name }}</h2>
            </div>
            <div class="row g-0">
                <!-- Imagen del autor -->
                <div class="col-md-4 text-center p-5">
                    <img src="{{ asset(author.image) }}" alt="{{ author.name }}" class="img-fluid rounded-circle mb-3">
                </div>

                <!-- InformaciÃ³n del autor -->
                <div class="col-md-8 p-5">
                    <div class="card-body">
                        <h3 class="card-title">Author Information</h3>
                        <p><strong>Email:</strong> {{ author.email }}</p>
                        <p><strong>Number of Books:</strong> {{ books_count }}</p>

                        <!-- Lista de libros -->
                        <h4 class="mt-4">Books:</h4>
                        <ul class="list-group mb-4">
                            {% for book in author.books %}
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    {{ book }}
                                    <span class="badge">View</span>
                                </li>
                            {% endfor %}
                        </ul>

                        <!-- Acciones: Show List y Edit -->
                        <div class="d-flex">
                            <a href="{{ path('app_author_list') }}" class="btn btn-info">Show List</a>
                            <a href="{{ path('author_edit', {'id': author.id}) }}" class="btn btn-warning">Edit</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="{{ asset('node_modules/bootstrap/dist/js/bootstrap.bundle.min.js') }}"></script>
</body>

</html>
