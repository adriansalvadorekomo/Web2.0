<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Author Details - {{ author.name }}</title>
    <link rel="stylesheet" href="{{ asset('node_modules/bootstrap/dist/css/bootstrap.min.css') }}">
</head>
<body>
    <div class="container mt-5">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h2 class="card-title">{{ author.name }}</h2>
            </div>
            <div class="row g-0">
                <!-- Imagen del autor -->
                <div class="col-md-4 text-center p-4">
                    <img src="{{ asset(author.image) }}" alt="{{ author.name }}" class="img-fluid rounded-circle mb-3 border border-secondary" style="width: 200px; height: auto;">
                </div>

                <!-- InformaciÃ³n del autor -->
                <div class="col-md-8 p-4">
                    <div class="card-body">
                        <h3 class="card-title">Author Information</h3>
                        <p><strong>Email:</strong> {{ author.email }}</p>
                        <p><strong>Number of Books:</strong> {{ books_count }}</p>

                        <!-- Lista de libros -->
                        <h4>Books:</h4>
                        <ul class="list-group mb-3">
                            {% for book in author.books %}
                                <li class="list-group-item">{{ book }}</li>
                            {% endfor %}
                        </ul>

                        <!-- Acciones: Show y Edit -->
                        <div>
                            <a href="{{ path('author_show', {'id': author.id}) }}" class="btn btn-info me-2">Show</a>
                            <a href="{{ path('author_edit', {'id': author.id}) }}" class="btn btn-warning">Edit</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="{{ asset('node_modules/bootstrap/dist/js/bootstrap.bundle.min.js') }}"></script>
</body>
</html>
